<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View.OnClickListener" />

        <import type="android.view.View" />

        <variable
            name="item"
            type="com.milylg.editarea.ui.SongItem" />

        <variable
            name="clickAction"
            type="com.milylg.editarea.ui.AudioItemClickAction" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:onClick="@{(view)-> clickAction.onClick(view)}">

        <TextView
            android:id="@+id/tv_uri_song"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{item.uri}"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_song_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_baseline_music_note_24"
            android:gravity="start|center_vertical"
            android:text="@{item.songName}"
            android:textColor="@color/primaryTextColor"
            android:textSize="16sp"
            tools:ignore="UseCompatTextViewDrawableXml" />
    </LinearLayout>
</layout>